APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=petslodge
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_LOG_DIR=./logs/monitoring
MONITORING_REPORT_DIR=./reports/monitoring
MONITORING_CHECK_INTERVAL=5000
MONITORING_ALERT_ERROR_RATE=0.05
MONITORING_ALERT_TRANSFORMATION_FAILURE=0.1
MONITORING_ALERT_RESPONSE_TIME=5000
MONITORING_METRICS_WINDOW=3600000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_REPORT_ENDPOINT=/health/report
HEALTH_CHECK_INTERVAL=60000

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_MONITORING=true
LOG_PERFORMANCE=true
LOG_DATA_FLOW=true

# Alert Configuration
ALERT_ENABLED=true
ALERT_EMAIL=admin@petslodge.com
ALERT_SLACK_WEBHOOK=
ALERT_HIGH_ERROR_RATE=true
ALERT_DATA_INCONSISTENCY=true
ALERT_PERFORMANCE_DEGRADATION=true
ALERT_SYSTEM_HEALTH_ISSUES=true

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=local
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=
DEPLOYMENT_ROLLBACK_ENABLED=true
DEPLOYMENT_BACKUP_ENABLED=true
